{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "SKIP_DATABASE",
    "DATABASE_URL",
    "DATABASE_URL_UNPOOLED"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "SKIP_DATABASE",
        "DATABASE_URL",
        "DATABASE_URL_UNPOOLED",
        "JWT_SECRET",
        "NODE_ENV"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "start": {
      "dependsOn": ["build"]
    }
  }
}